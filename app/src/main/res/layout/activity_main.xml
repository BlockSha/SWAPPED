<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#121212"
    android:fitsSystemWindows="true">

    <!-- Titre de l'app -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SWAPPED"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FF3B3B"
        android:layout_marginBottom="12dp" />

    <!-- Slogan -->
    <TextView
        android:id="@+id/app_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messagerie ultra sécurisée"
        android:textSize="16sp"
        android:textColor="#BBBBBB"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="48dp"
        android:gravity="center" />

    <!-- Bouton Se connecter -->
    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se connecter"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF3B3B"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_red" />

    <!-- Bouton S'enregistrer -->
    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S’enregistrer"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#FF3B3B"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/btn_transparent_border" />

</LinearLayout>
